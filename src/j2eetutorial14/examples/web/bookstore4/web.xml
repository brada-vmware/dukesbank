<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" version="2.4" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
  <display-name>bookstore4</display-name>
  <context-param>
    <param-name>javax.servlet.jsp.jstl.fmt.localizationContext</param-name>
    <param-value>messages.BookstoreMessages</param-value>
  </context-param>
  <servlet>
    <display-name>bookdetails</display-name>
    <servlet-name>bookdetails</servlet-name>
    <jsp-file>/bookdetails.jsp</jsp-file>
  </servlet>
  <servlet>
    <display-name>bookreceipt</display-name>
    <servlet-name>bookreceipt</servlet-name>
    <jsp-file>/bookreceipt.jsp</jsp-file>
  </servlet>
  <servlet>
    <display-name>bookshowcart</display-name>
    <servlet-name>bookshowcart</servlet-name>
    <jsp-file>/bookshowcart.jsp</jsp-file>
  </servlet>
  <servlet>
    <display-name>bookstore</display-name>
    <servlet-name>bookstore</servlet-name>
    <jsp-file>/bookstore.jsp</jsp-file>
  </servlet>
  <servlet>
    <display-name>bookcatalog</display-name>
    <servlet-name>bookcatalog</servlet-name>
    <jsp-file>/bookcatalog.jsp</jsp-file>
  </servlet>
  <servlet>
    <display-name>bookcashier</display-name>
    <servlet-name>bookcashier</servlet-name>
    <jsp-file>/bookcashier.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>bookdetails</servlet-name>
    <url-pattern>/bookdetails</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>bookreceipt</servlet-name>
    <url-pattern>/bookreceipt</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>bookshowcart</servlet-name>
    <url-pattern>/bookshowcart</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>bookstore</servlet-name>
    <url-pattern>/bookstore</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>bookcatalog</servlet-name>
    <url-pattern>/bookcatalog</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>bookcashier</servlet-name>
    <url-pattern>/bookcashier</url-pattern>
  </servlet-mapping>
  <jsp-config>
    <jsp-property-group>
      <display-name>bookstore4</display-name>
      <url-pattern>*.jsp</url-pattern>
      <el-ignored>false</el-ignored>
      <scripting-invalid>false</scripting-invalid>
      <is-xml>false</is-xml>
      <include-prelude>/template/prelude.jspf</include-prelude>
      <include-coda>/template/coda.jspf</include-coda>
    </jsp-property-group>
  </jsp-config>
  <resource-ref>
    <res-ref-name>jdbc/BookDB</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
    <res-sharing-scope>Shareable</res-sharing-scope>
  </resource-ref>
</web-app>
