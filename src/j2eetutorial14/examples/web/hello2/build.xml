<!DOCTYPE project [
  <!ENTITY targets SYSTEM "../../common/targets.xml">
  <!ENTITY webtargets SYSTEM "../common/targets.xml">
]>

<project name="hello2-example" default="build" basedir=".">

  <!-- Configure the context path for this application -->
  <property name="example" value="hello2" />

  <!-- Configure properties -->
  <property file="../../common/build.properties"/>
  <property file="../common/build.properties"/>

  &targets;
  &webtargets;

  <target name="build" depends="copy" 
     description="Compile app Java files" >
    <javac srcdir="src" destdir="${build}">
    	<include name="**/*.java" />
     	<classpath refid="classpath"/>
    </javac>
  </target>

</project>
